<PongBall>:
    size: 50,50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<paddle>:
    size : 20, 90
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<pongGame>:
    ball : pong_ball
    player_1 : paddle_left
    player_2 : paddle_right
    canvas:
        Rectangle:
            pos : self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size : 70
        center_x : root.width/4
        top: root.top - 50
        text : str(root.player_1.score)

    Label:
        font_size : 70
        center_x : root.width * 3/4
        top: root.top - 50
        text : str(root.player_2.score)

    PongBall:
        id : pong_ball
        center: self.parent.center

    paddle:
        id : paddle_left
        x : root.x
        center_y : root.center_y

    paddle:
        id : paddle_right
        x : root.width - self.width
        center_y : root.center_y
